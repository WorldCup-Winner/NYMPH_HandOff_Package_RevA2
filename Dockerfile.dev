# NYMPH 1.1 Development Environment
# Based on Ubuntu 22.04 with build tools

FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install build essentials
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    python3 \
    python3-pip \
    curl \
    wget \
    vim \
    bash \
    && rm -rf /var/lib/apt/lists/*

# Install C++17 toolchain
RUN apt-get update && apt-get install -y \
    g++-11 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy project files
COPY . /workspace

# Default command
CMD ["/bin/bash"]

